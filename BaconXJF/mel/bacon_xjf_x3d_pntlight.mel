global int $depBxjf;

global proc string bacon_xjf_x3d_pntlight(string $pntlight, string $fileFormat, string $dField, string $bcnEnd)
{
global int $depBxjf;
	string $output = "";

	//Determin whether or not this node has been exported already.
    int $beenUsed = false;

    string $attribute = $pntlight + ".x3d";
    if(`attributeExists "x3d" $pntlight`) $beenUsed = `getAttr $attribute`;
    else
    {
        select -ne $pntlight;
        addAttr -shortName x3d -longName x3dExported -at bool;
    }

	int $i;    
    string $dlprint = "";
    if($beenUsed == true)
    {
        switch($fileFormat)
        {
            case "x3dvFileFormat":
//                if($cField != "") $dlprint = $cField + " " + "USE " + `getAttr $gBxjf.name`;
//                else $dlprint = "USE " + `getAttr $gBxjf.name`;
//                prtLineBxjf $dlprint;
                break;
            case "x3djFileFormat":
				$output = getNamelessObjHead()
				$output += "\n";

				$depBxjf++;
				for($i=0; $i<$depBxjf; $i++) $output += "\t";
				$output += getObjHead("PointLight");
				$output += "\n";

                $depBxjf++;
				for($i=0; $i<$depBxjf; $i++) output += "\t";
                $output += getNVPrStr("@USE", $pntlight, "");
                $output += "\n";
                
                $depBxjf--;
				for($i=0; $i<$depBxjf; $i++) $output += "\t";
                $output += getObjFoot("");
                $output += "\n";
                
                $depBxjf--;
                $output += getObjFoot($bcnEnd);
                break;
            case "x3dxFileFormat":
//                string $xmlText = "<DirectionalLight USE=\"" + `getAttr $gBxjf.name` + "\"";
//                if($cField != "") $xmlText = $xmlText + " containerField=\"" + $cField + "\"";
//                $xmlText = $xmlText + "/>";
//                prtLineBxjf $xmlText;
                break;
            case "x3dhFileFormat":
//                string $xmlText = "<DirectionalLight USE=\"" + `getAttr $gBxjf.name` + "\"";
//                if($cField != "") $xmlText = $xmlText + " containerField=\"" + $cField + "\"";
//                $xmlText = $xmlText + "/>";
//                prtLineBxjf $xmlText;
                break;            
                 
            default:
                break;
        }
    }
    else
    {
        $beenUsed = true;
        setAttr $attribute -type bool $beenUsed;
    
    	//The child node actually has the light attributes, so you'll need to grab
    	//that node.
        string        $pc[] = `listRelatives -children $pntlight`;
        string        $catt = $pc[0] + ".color";
         float   $dlColor[] = `getAttr $catt`;
     
        string        $iatt = $pc[0] + ".intensity";
         float    $dlIntens = `getAttr $iatt`;
         if($dlIntens > 1.0) $dlIntens = 1.0;
     
		 float  $location[] = `getAttr ($pntlight + ".translate")`; 
         string $x3d_intensity = "";
         if($dlIntens != 0.0 ) $x3d_intensity = "intensity " +  $dlIntens;

         string $x3d_color     = "";
         if($dlColor[0] != 0.0 && $dlColor[1] != 0.0 && $dlColor[2] != 0.0) $x3d_color = "color " +  $dlColor[0] + " " +  $dlColor[1] + " " +  $dlColor[2];
     
         string $x3d_location = "";
         if($location[0] != 0.0 && $location[1] != 0.0 && $location[2] != 0.0) $x3d_location = "location " +  $location[0] + " " + $location[1] + " " +  $location[2];

        switch($fileFormat)
        {
            case "x3dvFileFormat":
/*                string $clString = "";
                if($cField != "") $clString = $cField + " DEF " + $gBxjf + " DirectionalLight";
                else $clString = "DEF " + $gBxjf + " DirectionalLight";
                if($x3d_intensity != "" || $x3d_color != "" || $x3d_direction != "")
                {
                    prtLineBxjf $clString;
                    prtLineBxjf "{";
                    $depBxjf++;
                    if($x3d_intensity != "") prtLineBxjf $x3d_intensity;
                    if($x3d_color     != "") prtLineBxjf $x3d_color;
                    if($x3d_location  != "") prtLineBxjf $x3d_location;
                    $depBxjf--;
                    prtLineBxjf "}";
                }
                else
                {
                    $clString = $clString + "{}";
                    prtLineBxjf $clString;
                } */
                break;
            case "x3djFileFormat":
            	string $jPntLightFields[];
            	int    $jplfSize = 0;
				$output = getNamelessObjHead()
				$output += "\n";

				$depBxjf++;
				for($i=0; $i<$depBxjf; $i++) $output += "\t";
				$output += getObjHead("PointLight");
				$output += "\n";

                $depBxjf++;
                
				$jPntLightFields[$jplfSize] = "";
				for($i=0; $i<$depBxjf; $i++) $jPntLightFields[$jplfSize] += "\t";
                $jPntLightFields[$jplfSize] += getNVPrStr("@DEF", $pntlight, "");
				$jplfSize++;
				
         		if($dlIntens != 0.0 )
         		{
					$jPntLightFields[$jplfSize] = "";
					for($i=0; $i<$depBxjf; $i++) $jPntLightFields[$jplfSize] += "\t";
	                $jPntLightFields[$jplfSize] += getNVPrFlt("@intensity", $dlIntens, "");
					$jplfSize++;
         		} //$x3d_intensity = "intensity " +  $dlIntens;

         		if($dlColor[0] != 0.0 && $dlColor[1] != 0.0 && $dlColor[2] != 0.0)
         		{
					$jPntLightFields[$jplfSize] = "";
					for($i=0; $i<$depBxjf; $i++) $jPntLightFields[$jplfSize] += "\t";
	                $jPntLightFields[$jplfSize] += getNVPrFltArr("@color", {$dlColor[0], $$dlColor[1], $$dlColor[2]}, "");
					$jplfSize++;
         		}//$x3d_color = "color " +  $dlColor[0] + " " +  $dlColor[1] + " " +  $dlColor[2];
     
         		if($location[0] != 0.0 && $location[1] != 0.0 && $location[2] != 0.0)
         		{
					$jPntLightFields[$jplfSize] = "";
					for($i=0; $i<$depBxjf; $i++) $jPntLightFields[$jplfSize] += "\t";
	                $jPntLightFields[$jplfSize] += getNVPrFltArr("@location", {$location[0], $location[1], $location[2]}, "");
					$jplfSize++;
         		}//$x3d_location = "location " +  $location[0] + " " +  $location[1] + " " +  $location[2];

                for($i=0; $i<$jplfSize; $i++)
                {
                	$output += $jPntLightFields[$i]
                	if($i < $jplfSize-1) $output += ",";
                	$output += "\n";
                } 
                
                $depBxjf--;
				for($i=0; $i<$depBxjf; $i++) $output += "\t";
                $output += getObjFoot("");
                $output += "\n";
                
                $depBxjf--;
                $output += getObjFoot($bcnEnd);
                break;
            case "x3dxFileFormat":
                break;
            case "x3dhFileFormat":
                break;
            default:
                break;
        }
    }


	return $output;
}